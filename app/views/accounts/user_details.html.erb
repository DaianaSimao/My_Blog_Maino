  <div class="container py-5">
  <div class="d-flex justify-content-center">
    <div class="row">
      <div class="col-lg-12">
        <div class="card mb-4">
          <div class="card-body text-center">
            <%= image_tag("perfil.png", width: 150, class: "rounded-circle img-fluid") %>

            <h5 class="my-3"><%= @user.perfil.nome %> <%= @user.perfil.sobrenome %></h5>
            <p class="text-muted mb-1">Posts: <%= @post_count %> </p>
            <p class="text-muted mb-4">Comentarios: <%= @comentarios_count %> </p>
            <div class="d-flex justify-content-center mb-2">
              <%= link_to "Editar Perfil", edit_user_registration_path(@user), class: "btn btn-outline-dark" %>
              <%= link_to "Posts", posts_details_path, class: "btn btn-outline-dark ms-1" %>
              <%= link_to "Novo Post+",new_post_path, class: "btn btn-outline-dark ms-1" %>
            </div>
          </div>
        </div>
      </div>
      <div class="col-lg-12">
        <div class="card mb-4">
          <div class="card-body">
            <div class="row">
              <div class="col-sm-3">
                <p class="mb-0">Nome</p>
              </div>
              <div class="col-sm-9">
                <p class="text-muted mb-0"><%= @user.perfil.nome %> <%= @user.perfil.sobrenome %></p>
              </div>
            </div>
            <hr>
            <div class="row">
              <div class="col-sm-3">
                <p class="mb-0">Email</p>
              </div>
              <div class="col-sm-9">
                <p class="text-muted mb-0"><%= @user.email %></p>
              </div>
            </div>
            <hr>
            <div class="row">
              <div class="col-sm-3">
                <p class="mb-0">Bio</p>
              </div>
              <div class="col-sm-9">
                <p class="text-muted mb-0"><%= @user.perfil.bio %></p>
              </div>
            </div>
            <hr>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
