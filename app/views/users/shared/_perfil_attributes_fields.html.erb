<%= f.fields_for :perfil_attributes do |perfil_fields| %>
  <div class="form-data">
    <%= perfil_fields.label t('views.nome') %><br />
    <%= perfil_fields.text_field :nome, placeholder: t('views.nome'), class: "form-control w-100", required: true %>
  </div>
  <div class="form-data">
    <%= perfil_fields.label t('views.sobrenome') %><br />
    <%= perfil_fields.text_field :sobrenome, placeholder: t('views.sobrenome'), class: "form-control w-100", required: true %>
  </div>
  <div class="form-data">
    <%= perfil_fields.label t('views.upload_avatar') %><br />
    <%= perfil_fields.file_field :avatar, placeholder: t('views.upload_avatar'), class: "form-control w-100" %>
  </div>
  <div class="form-data">
    <%= perfil_fields.label t('views.bio') %><br />
    <%= perfil_fields.text_area :bio, placeholder: t('views.sobre_voce'), class: "form-control w-100", required: true %>
  </div>
<% end %>
